        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/bookmyshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Book my show" />

    <Button
        android:id="@+id/s1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search List" />
