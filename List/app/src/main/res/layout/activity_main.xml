    <Button
        android:id="@+id/s7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity Life cycle" />
    <Button
        android:id="@+id/s8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera" />
    <Button
        android:id="@+id/s9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SurfaceView" />
